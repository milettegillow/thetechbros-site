---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Merch">
  <Navigation />
  <main>
    <!-- Hero -->
    <section class="merch-hero">
      <div class="container">
        <h1>merch</h1>
        <p class="hero-subtitle">Wear the mission. Build the movement.</p>
      </div>
    </section>

    <!-- Coming Soon -->
    <section class="coming-soon">
      <div class="container">
        <div class="coming-soon-content">
          <div class="coming-soon-image">
            <img src="/merch/merch-hero.jpg" alt="Merch" />
          </div>
          <div class="coming-soon-text">
            <h3>coming soon</h3>
            <p>We're designing merch that reflects our vibe: bold, techy, unserious.</p>
            <p>Launching Spring 2026. Sign up below to be first in line.</p>
            
            <div class="waitlist-section">
              <h3>join the waitlist</h3>
              <p>Be the first to know when our merch launches. Early access, exclusive designs, and special pricing for community members.</p>
              <form class="waitlist-form">
            <input type="text" placeholder="Your Name" required />
            <input type="email" placeholder="Your Email" required />
            <select required>
              <option value="">Select Size Preference</option>
              <option value="xs">XS</option>
              <option value="s">S</option>
              <option value="m">M</option>
              <option value="l">L</option>
              <option value="xl">XL</option>
              <option value="xxl">XXL</option>
            </select>
            <textarea placeholder="What merch items are you most interested in? (optional)" rows="4"></textarea>
            <button type="submit" class="btn">Join Waitlist (Placeholder)</button>
                <p class="form-note">We'll only use your email to notify you about merch launches. No spam, ever.</p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>

<style>
  .merch-hero {
    padding: 6rem 0 3rem;
    text-align: center;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: var(--color-accent);
    margin-top: 1rem;
  }

  .coming-soon {
    padding: 4rem 0;
    background: rgba(0, 0, 0, 0.2);
  }

  .coming-soon-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .coming-soon-image {
    width: 100%;
  }

  .coming-soon-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    border-radius: 8px;
  }

  .coming-soon-text h2 {
    color: var(--color-accent);
    margin-bottom: 2rem;
  }

  .coming-soon-text p {
    font-size: 1.2rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: var(--color-text-muted);
  }

  .waitlist-section {
    margin-top: 3rem;
  }

  .waitlist-section h2 {
    color: var(--color-accent);
    margin-bottom: 1.5rem;
    margin-top: 2rem;
  }

  .waitlist-section p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: var(--color-text-muted);
  }

  .waitlist-form {
    display: flex;
    flex-direction: column;
  }

  select {
    width: 100%;
    padding: 0.75rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: var(--color-text);
    font-family: inherit;
    font-size: 1rem;
    border-radius: 4px;
    margin-bottom: 1rem;
  }

  select:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 10px rgba(239, 31, 159, 0.3);
  }

  .form-note {
    margin-top: 1rem;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    font-style: italic;
    text-align: center;
  }

  @media (max-width: 768px) {
    .coming-soon-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .coming-soon-image {
      order: -1;
    }
  }
</style>
