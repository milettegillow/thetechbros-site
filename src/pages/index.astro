<style>
  .hero {
    padding: 6rem 0 4rem;
    text-align: center;
  }

  .hero h1 {
    margin-bottom: 1.5rem;
    font-size: clamp(2rem, 4vw, 3rem);
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: var(--color-accent);
    margin-bottom: 3rem;
    font-weight: 300;
  }

  .hero-image {
    width: 100%;
    margin: 3rem 0;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .hero-img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }


  .what-we-do {
    background: rgba(0, 0, 0, 0.2);
  }

  .what-we-do .card {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .what-we-do .card:hover {
    cursor: pointer;
  }

  .about-programme {
    padding: 6rem 0;
  }

  .programme-grid {
    display: grid;
    grid-template-columns: 1fr 1fr !important;
    gap: 3rem;
    align-items: start;
    margin-top: 3rem;
  }

  .programme-text {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 100%;
    min-width: 0;
  }

  .programme-subheading {
    font-size: 1.5rem;
    font-weight: 300;
    text-align: left;
    margin: 2rem 0 2.5rem;
    color: var(--color-text);
    line-height: 1.6;
  }

  .programme-content {
    font-size: 1.1rem;
    line-height: 1.8;
    text-align: left;
    color: var(--color-text);
    margin-bottom: 2.5rem;
  }

  .programme-content p {
    margin-bottom: 1.5rem;
  }

  .programme-content p:last-child {
    margin-bottom: 0;
  }

  .programme-cta {
    margin-top: auto;
    text-align: left;
  }

  .cohort-image-section {
    width: 100%;
    max-width: 100%;
    min-width: 0;
    display: flex;
    flex-direction: column;
  }

  .cohort-img {
    max-width: 100%;
    width: 100%;
    height: auto;
    display: block;
    border-radius: 4px;
    object-fit: contain;
  }

  .cohort-carousel-section {
    margin-top: 2rem;
    max-width: 100%;
    width: 100%;
  }

  .cohort-carousel-text {
    font-family: var(--font-primary);
    font-size: 0.95rem;
    font-weight: 400;
    color: var(--color-text-muted);
    text-align: left;
    margin-bottom: 1rem;
    font-style: italic;
  }

  .cohort-carousel {
    overflow: hidden;
    position: relative;
    width: 100%;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .cohort-carousel .cohort-track,
  .cohort-track.logo-carousel-track {
    animation: scroll-reverse 60s linear infinite !important;
    gap: 0.1rem !important;
  }

  @keyframes scroll-reverse {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  .stats {
    background: rgba(0, 0, 0, 0.3);
    padding: 4rem 0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    margin-top: 3rem;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-primary);
    text-shadow: 0 0 20px rgba(239, 31, 159, 0.5);
    margin-bottom: 0.5rem;
  }

  .stat-label {
    color: var(--color-text-muted);
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.1em;
  }

  .partners-section {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .partners-heading {
    font-family: var(--font-primary);
    font-size: 1rem;
    font-weight: 400;
    color: var(--color-text-muted);
    text-transform: lowercase;
    text-align: center;
    margin-bottom: 2rem;
    letter-spacing: 0.05em;
  }

  .logo-carousel {
    overflow: hidden;
    position: relative;
    width: 100%;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .logo-carousel-track {
    display: flex;
    gap: 4rem;
    animation: scroll 30s linear infinite;
    width: fit-content;
  }

  /* Partner carousel: tighter spacing + slower scroll */
  .partners-section .logo-carousel-track {
    gap: 0.5rem;
    animation: scroll 75s linear infinite;
  }

  .logo-item {
    flex-shrink: 0;
    width: 150px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .logo-item img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (max-width: 768px) {
    .logo-item {
      width: 120px;
      height: 60px;
      font-size: 0.75rem;
    }

    .logo-carousel-track {
      gap: 2rem;
    }
  }

  /* Tablet and Mobile: Single column layout for programme-grid */
  @media (max-width: 1024px) {
    .about-programme {
      padding: 4rem 0;
      overflow-x: hidden;
      width: 100%;
    }

    .about-programme .container {
      padding: 0 1rem;
      max-width: 100%;
      width: 100%;
      box-sizing: border-box;
    }

    .programme-grid {
      grid-template-columns: 1fr !important;
      gap: 2rem;
      margin-top: 2rem;
      width: 100%;
      box-sizing: border-box;
    }

    .programme-text {
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
    }

    .programme-content {
      font-size: 1rem;
      max-width: 100%;
      width: 100%;
      box-sizing: border-box;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    .programme-content p {
      max-width: 100%;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    .programme-cta {
      margin-top: 2rem;
      width: 100%;
      max-width: 100%;
    }

    .programme-subheading {
      font-size: 1.25rem;
    }

    .cohort-image-section {
      max-width: 100%;
      width: 100%;
      box-sizing: border-box;
    }
  }

  .final-cta {
    padding: 6rem 0;
  }

  .final-cta p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: var(--color-text);
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0 2rem;
    }

    .hero-subtitle {
      font-size: 1.2rem;
    }
  }
</style>
