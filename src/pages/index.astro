    font-size: clamp(2rem, 4vw, 3rem);
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: var(--color-accent);
    margin-bottom: 3rem;
    font-weight: 300;
  }

  .hero-image {
    width: 100%;
    margin: 3rem 0;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .hero-img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .cohort-img {
    max-width: 600px;
    width: 100%;
    height: auto;
    display: block;
    margin: 2rem auto;
    border-radius: 4px;
  }

  .what-we-do {
    background: rgba(0, 0, 0, 0.2);
  }

  .what-we-do .card {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .what-we-do .card:hover {
    cursor: pointer;
  }

  .why-different {
    padding: 6rem 0;
  }

  .intro-text {
    font-size: 1.25rem;
    text-align: left;
    margin-bottom: 3rem;
    color: var(--color-text);
  }

  .features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .feature-item h3 {
    color: var(--color-accent);
    margin-bottom: 0.5rem;
  }

  .stats {
    background: rgba(0, 0, 0, 0.3);
    padding: 4rem 0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    margin-top: 3rem;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-primary);
    text-shadow: 0 0 20px rgba(239, 31, 159, 0.5);
    margin-bottom: 0.5rem;
  }

  .stat-label {
    color: var(--color-text-muted);
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.1em;
  }

  .partners-section {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .partners-heading {
    font-family: var(--font-primary);
    font-size: 1rem;
    font-weight: 400;
    color: var(--color-text-muted);
    text-transform: lowercase;
    text-align: center;
    margin-bottom: 2rem;
    letter-spacing: 0.05em;
  }

  .logo-carousel {
    overflow: hidden;
    position: relative;
    width: 100%;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .logo-carousel-track {
    display: flex;
    gap: 4rem;
    animation: scroll 30s linear infinite;
    width: fit-content;
  }

  /* Partner carousel: tighter spacing + slower scroll */
  .partners-section .logo-carousel-track {
    gap: 0.5rem;
    animation: scroll 75s linear infinite;
  }

  .logo-item {
    flex-shrink: 0;
    width: 150px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .logo-item img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .cohort-background-section {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .cohort-background-text {
    font-family: var(--font-primary);
    font-size: 0.95rem;
    font-weight: 400;
    color: var(--color-text-muted);
    text-align: center;
    margin-bottom: 2rem;
    font-style: italic;
  }

  .cohort-carousel {
    margin-top: 1rem;
  }

  .cohort-track {
    animation: scroll-reverse 60s linear infinite;
    gap: 0.5rem;
  }

  @keyframes scroll-reverse {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  @media (max-width: 768px) {
    .logo-item {
      width: 120px;
      height: 60px;
      font-size: 0.75rem;
    }

    .logo-carousel-track {
      gap: 2rem;
    }

    .cohort-background-text {
      font-size: 0.85rem;
    }
  }

  .final-cta {
    padding: 6rem 0;
  }

  .final-cta p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: var(--color-text);
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0 2rem;
    }

    .hero-subtitle {
      font-size: 1.2rem;
    }
  }
</style>
