<style>
  .founders {
    padding: 6rem 0 4rem;
  }

  .section-intro {
    text-align: left;
    font-size: 1.2rem;
    margin-bottom: 3rem;
    color: var(--color-text);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .team-card {
    text-align: center;
  }

  .team-photo {
    width: 200px;
    height: 200px;
    margin: 0 auto 1.5rem;
    object-fit: contain;
    display: block;
  }

  .team-card h3 {
    font-family: var(--font-secondary);
    font-size: 1.5rem;
    font-weight: 600;
    color: white;
    margin-bottom: 0.5rem;
    text-transform: none;
  }

  .team-role {
    color: var(--color-accent);
    font-size: 0.95rem;
    margin-bottom: 1rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: var(--font-secondary);
  }

  .team-bio {
    color: var(--color-text-muted);
    line-height: 1.7;
    font-size: 0.95rem;
    text-align: left;
    list-style-position: outside;
    padding-left: 1.5rem;
  }

  .team-bio li {
    margin-bottom: 0.75rem;
  }

  .team-bio li:last-child {
    margin-bottom: 0;
  }

  .team-linkedin {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-top: 1.5rem;
    color: var(--color-accent);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .team-linkedin:hover {
    color: var(--color-primary);
    transform: translateY(-2px);
  }

  .team-linkedin svg {
    width: 24px;
    height: 24px;
  }

  .core-team {
    background: rgba(0, 0, 0, 0.2);
    padding: 4rem 0;
  }

  .work-with-us {
    padding: 4rem 0;
  }

  .open-roles {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .role-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem;
    border-radius: 8px;
  }

  .role-card h3 {
    color: var(--color-accent);
    margin-bottom: 1rem;
  }

  .role-card p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .role-details {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .open-roles {
      grid-template-columns: 1fr;
    }

    .team-photo {
      width: 150px;
      height: 150px;
    }
  }
</style>
