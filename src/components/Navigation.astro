---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/team', label: 'Team' },
  { 
    href: '/apply', 
    label: 'Apply',
    submenu: [
      { href: '/apply/faq', label: 'FAQ' },
      { href: '/apply/join-community', label: 'Join the Community' },
      { href: '/apply/accelerator', label: 'Accelerator' },
    ]
  },
  { 
    href: '/partner', 
    label: 'Partner',
    submenu: [
      { href: '/partner/companies', label: 'Companies' },
      { href: '/partner/investors', label: 'Investors' },
      { href: '/partner/universities', label: 'Universities' },
    ]
  },
  { href: '/merch', label: 'Merch' },
  { href: '/press', label: 'Press' },
];
---

<nav class="nav">
  <div class="nav-container">
    <a href="/" class="nav-logo">the tech bros</a>
    <button type="button" class="nav-toggle" aria-label="Toggle navigation menu" aria-expanded="false">
      <span class="nav-toggle-icon"></span>
      <span class="nav-toggle-icon"></span>
      <span class="nav-toggle-icon"></span>
    </button>
    <ul class="nav-links" id="nav-links">
      {navLinks.map((link) => (
        <li class={link.submenu ? 'nav-item-has-submenu' : ''}>
          <a href={link.href} class="nav-link" data-has-submenu={link.submenu ? 'true' : 'false'}>{link.label}</a>
          {link.submenu && (
            <ul class="nav-submenu">
              {link.submenu.map((subItem) => (
                <li>
                  <a href={subItem.href} class="nav-sublink">{subItem.label}</a>
                </li>
              ))}
            </ul>
          )}
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  .nav {
    position: sticky;
    top: 0;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(2px);
    border-bottom: 4px solid var(--color-accent);
    box-shadow: 0 4px 20px rgba(92, 225, 230, 0.6), 0 0 40px rgba(92, 225, 230, 0.4);
    z-index: 100;
    padding: 1rem 0;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    font-family: "Helveticish", "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 2rem;
    font-weight: 400;
    color: var(--color-primary);
    text-shadow: 0 0 10px rgba(239, 31, 159, 0.4);
    text-decoration: none;
    text-transform: lowercase;
    letter-spacing: -0.06em;
  }

  .nav-toggle {
    display: none;
    background: transparent;
    border: none;
    cursor: pointer;
    flex-direction: column;
    gap: 4px;
    padding: 0.5rem;
    z-index: 101;
  }

  .nav-toggle-icon {
    width: 24px;
    height: 2px;
    background: var(--color-primary);
    transition: all 0.3s ease;
    box-shadow: 0 0 4px rgba(239, 31, 159, 0.4);
    transform-origin: center;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
    align-items: center;
  }

  .nav-item-has-submenu {
    position: relative;
  }

  .nav-link {
    font-family: var(--font-secondary);
    color: var(--color-text-muted);
    font-weight: 500;
    transition: color 0.2s ease;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-item-has-submenu .nav-link::after {
    content: 'â–¼';
    font-size: 0.6rem;
    transition: transform 0.2s ease;
  }

  .nav-item-has-submenu:hover .nav-link::after {
    transform: rotate(180deg);
  }

  .nav-link:hover {
    color: var(--color-primary);
    text-shadow: 0 0 8px rgba(239, 31, 159, 0.4);
  }

  .nav-submenu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(66, 0, 33, 0.98);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(239, 31, 159, 0.3);
    border-radius: 4px;
    padding: 0.5rem 0;
    list-style: none;
    min-width: 220px;
    margin-top: 0.5rem;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, visibility 0.2s ease, transform 0.2s ease;
    transform: translateX(-50%) translateY(-10px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
  }

  .nav-item-has-submenu:hover .nav-submenu {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .nav-sublink {
    font-family: var(--font-secondary);
    display: block;
    padding: 0.75rem 1.5rem;
    color: var(--color-text-muted);
    font-weight: 400;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .nav-sublink:hover {
    color: var(--color-primary);
    background: rgba(239, 31, 159, 0.1);
    text-shadow: 0 0 8px rgba(239, 31, 159, 0.4);
  }

  /* Tablet: Disable hover, enable click behavior */
  @media (max-width: 1024px) {
    .nav-item-has-submenu:hover .nav-submenu {
      opacity: 0;
      visibility: hidden;
      transform: translateX(-50%) translateY(-10px);
    }

    .nav-item-has-submenu:hover .nav-link::after {
      transform: rotate(0deg);
    }

    .nav-item-has-submenu.submenu-open .nav-submenu {
      opacity: 1;
      visibility: visible;
      transform: translateX(-50%) translateY(0);
    }

    .nav-item-has-submenu.submenu-open .nav-link::after {
      transform: rotate(180deg);
    }
  }

  @media (max-width: 768px) {
    .nav-container {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: 1rem;
      padding: 1rem;
      position: relative;
    }

    .nav-toggle {
      display: flex;
    }

    .nav-links {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: rgba(0, 0, 0, 0.95);
      backdrop-filter: blur(10px);
      border-top: 2px solid var(--color-accent);
      flex-direction: column;
      align-items: center;
      gap: 0;
      padding: 1rem;
      margin-top: 1rem;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: opacity 0.3s ease, visibility 0.3s ease, transform 0.3s ease;
      max-height: 0;
      overflow: hidden;
      list-style: none;
    }

    .nav-links.nav-open {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
      max-height: 1000px;
    }

    .nav-toggle[aria-expanded="true"] .nav-toggle-icon:nth-child(1) {
      transform: rotate(45deg);
      position: relative;
      top: 6px;
    }

    .nav-toggle[aria-expanded="true"] .nav-toggle-icon:nth-child(2) {
      opacity: 0;
    }

    .nav-toggle[aria-expanded="true"] .nav-toggle-icon:nth-child(3) {
      transform: rotate(-45deg);
      position: relative;
      top: -6px;
    }

    .nav-link {
      font-size: 0.85rem;
      padding: 0.75rem 0;
      width: 100%;
      justify-content: center;
      text-align: center;
      position: relative;
    }

    .nav-link::before {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 60px;
      height: 1px;
      background: rgba(255, 255, 255, 0.1);
    }

    .nav-item-has-submenu {
      width: 100%;
    }

    .nav-submenu {
      position: static;
      transform: none;
      margin-top: 0;
      margin-left: 0;
      width: 100%;
      opacity: 0;
      visibility: hidden;
      max-height: 0;
      overflow: hidden;
      border-radius: 0;
      border-left: 2px solid var(--color-primary);
      border-top: none;
      padding: 0;
      transition: opacity 0.3s ease, visibility 0.3s ease, max-height 0.3s ease, padding 0.3s ease;
    }

    .nav-item-has-submenu:hover .nav-submenu,
    .nav-item-has-submenu:focus-within .nav-submenu,
    .nav-item-has-submenu.submenu-open .nav-submenu {
      opacity: 1;
      visibility: visible;
      max-height: 500px;
      padding: 0.5rem 0;
      transform: none;
    }

    .nav-sublink {
      text-align: center;
    }
  }
</style>

<script>
  const navToggle = document.querySelector('.nav-toggle');
  const navLinks = document.getElementById('nav-links');

  if (navToggle && navLinks) {
    navToggle.addEventListener('click', () => {
      const isExpanded = navToggle.getAttribute('aria-expanded') === 'true';
      navToggle.setAttribute('aria-expanded', String(!isExpanded));
      navLinks.classList.toggle('nav-open');
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      if (!navToggle.contains(e.target as Node) && !navLinks.contains(e.target as Node)) {
        navToggle.setAttribute('aria-expanded', 'false');
        navLinks.classList.remove('nav-open');
      }
    });

    // Close menu when pressing Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && navLinks.classList.contains('nav-open')) {
        navToggle.setAttribute('aria-expanded', 'false');
        navLinks.classList.remove('nav-open');
      }
    });

    // Handle mobile and tablet submenu toggle for items with submenus
    const checkTabletOrMobile = () => window.matchMedia('(max-width: 1024px)').matches;
    
    const submenuLinks = document.querySelectorAll('.nav-link[data-has-submenu="true"]');
    
    // Close other submenus when opening a new one
    const closeOtherSubmenus = (targetItem: HTMLElement) => {
      document.querySelectorAll('.nav-item-has-submenu').forEach((item) => {
        if (item !== targetItem) {
          item.classList.remove('submenu-open');
        }
      });
    };
    
    submenuLinks.forEach((link) => {
      const parentItem = link.closest('.nav-item-has-submenu') as HTMLElement;
      if (!parentItem) return;

      link.addEventListener('click', (e) => {
        // Apply click behavior on tablets and mobile (up to 1024px)
        if (!checkTabletOrMobile()) {
          return; // Allow normal desktop hover behavior
        }

        const isOpen = parentItem.classList.contains('submenu-open');
        
        if (!isOpen) {
          // First tap: open submenu, prevent navigation
          e.preventDefault();
          closeOtherSubmenus(parentItem);
          parentItem.classList.add('submenu-open');
        } else {
          // Second tap: allow navigation (no preventDefault)
          // The link will navigate normally
          parentItem.classList.remove('submenu-open');
        }
      });
    });

    // Close submenus when clicking outside (tablet and mobile only)
    document.addEventListener('click', (e) => {
      if (!checkTabletOrMobile()) return;
      
      const target = e.target as Node;
      const clickedSubmenu = (target as HTMLElement).closest('.nav-item-has-submenu');
      const clickedSubmenuLink = (target as HTMLElement).closest('.nav-link[data-has-submenu="true"]');
      const clickedSublink = (target as HTMLElement).closest('.nav-sublink');
      
      // Don't close if clicking on a submenu item or link
      if (!clickedSubmenu && !clickedSubmenuLink && !clickedSublink) {
        document.querySelectorAll('.nav-item-has-submenu').forEach((item) => {
          item.classList.remove('submenu-open');
        });
      }
    });
  }
</script>
